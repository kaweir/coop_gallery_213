<% inst = @user ? @user : @link %>
<% if inst.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(inst.errors.count, "error") %>.
    </div>
    <ul>
    <% inst.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>