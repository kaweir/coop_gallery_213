<% provide(:title, @user.name) %>
<h1><%= @user.name %></h1>
<%= image_tag @user.pic.url(:thumb) %>
<div class="span8">
  <% if current_user?(@user) %>
    <%= link_to "Add artwork", new_artwork_path %>
  <% end %>
  <% if @user.artworks.any? %>
    <h3>Artwork (<%= @user.artworks.count %>)</h3>
    <ol class="artworks">
      <% @artworks.each do |artwork| %>
        <li>
          <span class="content"><%= artwork.title %></span>
          <%= image_tag artwork.image.url(:thumb) %>
          <% if current_user?(@user) %>
            | <%= link_to "delete", artwork, method: :delete, data: { confirm: "You sure?" } %>
          <% end %>
        </li>
      <% end %>
    </ol>
  <% end %>
</div>