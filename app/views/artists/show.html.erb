<% provide(:title, @artist.name) %>
<div class='large-info-container-no-border'>
  <h2 class='center text-title'><%= @artist.name %></h2>
  <% unless @artist.website.blank? %>
    <div class='artist-link'><%= link_to @artist.website, @artist.website unless @artist.website.blank? %></div>
  <% end %>
  <div class='artist-biography'><%= simple_format(@artist.biography) %></div>
  <% if @artworks %>
    <div class='all-artwork'>
      <% @artworks.each do |artwork| %>
        <div class="artwork-content">
          <%= link_to artwork.image.url, class: "artwork-#{@artist.slug}" do %>
            <%= image_tag artwork.image.url(:medium), class: "artwork-image" %>
            <div class='artwork-title'><%= artwork.title %></div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
